{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Daily or Weekly Planning Schema",
  "type": "object",

  "properties": {
    "plan_id": { "type": "string" },
    "plan_type": { "type": "string", "enum": ["daily", "weekly"] },
    "date_range": { "type": "string" },
    "owner": { "type": "string" },

    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "task_id": { "type": "string" },
          "title": { "type": "string" },
          "time_block": { "type": "string" },
          "priority": { "type": "string", "enum": ["P1", "P2", "P3"] },
          "dependency": { "type": "string" },
          "buffer_minutes": { "type": "number" },
          "expected_outcome": { "type": "string" },
          "status": { "type": "string", "enum": ["planned", "done", "deferred"] }
        },
        "required": ["task_id", "title", "time_block", "priority", "status"]
      }
    },

    "assumptions": {
      "type": "array",
      "items": { "type": "string" }
    }
  },

  "required": ["plan_id", "plan_type", "date_range", "owner", "tasks"]
}
