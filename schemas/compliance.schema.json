{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Compliance and Documentation Schema",
  "type": "object",

  "properties": {
    "project_id": {
      "type": "string"
    },
    "project_name": {
      "type": "string"
    },
    "approval_type": {
      "type": "string",
      "enum": ["GP", "DTCP", "BDA", "NA"]
    },
    "jurisdiction": {
      "type": "string"
    },
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "document_name": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["available", "pending", "missing"]
          }
        },
        "required": ["document_name", "status"]
      }
    },
    "compliance_status": {
      "type": "string",
      "enum": ["safe", "warning", "blocked"]
    },
    "risk_summary": {
      "type": "string"
    },
    "registration_ready": {
      "type": "boolean"
    },
    "last_reviewed_on": {
      "type": "string"
    }
  },

  "required": [
    "project_id",
    "project_name",
    "approval_type",
    "documents",
    "compliance_status",
    "registration_ready"
  ]
}
